{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist-server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["."]
}
